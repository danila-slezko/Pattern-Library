<label class="form-label padding-bottom-xxxs">Checkboxes</label>
<div class="flex flex-column gap-xxxs">
  {% for select in pickOptions %}
  <div>
    <input id="{{ select.value }}" name="{{ select.value }}" value="{{ select.value }}" class="checkbox" type="checkbox" checked="false" />
    <label for="{{ select.value }}">{{ select.text }}</label>
  </div>
  {% endfor %}
</div>

<script>
  var checkboxes = document.getElementsByTagName('input');

  for (var i=0; i<checkboxes.length; i++)  {
    if (checkboxes[i].type == 'checkbox')   {
      checkboxes[i].checked = false;
    }
  }
</script>
