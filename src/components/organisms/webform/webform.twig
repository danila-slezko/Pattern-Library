<section class="bg-contrast-lower">
  <div id="formAlert" style="display:none" onclick="closeBar()">
    <span>Message Sent <i class="close">Ã—</i></span>
    <script> function closeBar() { var e = document.getElementById("formAlert"); "none" === e.style.display ? e.style.display = "block" : e.style.display = "none" }; </script>
  </div>
  <script src="https://www.google.com/recaptcha/api.js" async defer="defer"></script>
  <script> function timestamp() { var response = document.getElementById("g-recaptcha-response"); if (response == null || response.value.trim() == "") {var elems = JSON.parse(document.getElementsByName("captcha_settings")[0].value);elems["ts"] = JSON.stringify(new Date().getTime());document.getElementsByName("captcha_settings")[0].value = JSON.stringify(elems); } } setInterval(timestamp, 500); </script>

  <div class="container max-width-adaptive-md margin-auto form-template-v3 v-space-sm padding-bottom-md">
    <form id="RetailInquiry" action="https://webto.salesforce.com/servlet/servlet.WebToLead?encoding=UTF-8" method="POST" autocomplete="off" novalidate>
      <input id="captcha_settings" type="hidden" name="captcha_settings" value='{"keyname":"CCS_Websites","fallback":"true","orgId":"00D2000000002px","ts":""}'>
      <input id="oid" type="hidden" name="oid" value="00D2000000002px">
      <input id="lead_source" type="hidden" name="lead_source" title="Lead Source" value="Landing Page">
      <input id="00N57000006PiUg" type="hidden" name="00N57000006PiUg" title="Lead Sub-Source" value="{{ formClient }}">
      <input id="Campaign_ID" type="hidden" name="Campaign_ID" value="{{ formCampaign }}">
      <input id="00N20000000gOZN" type="hidden" name="00N20000000gOZN">
      <input id="retURL" type="hidden" name="retURL" value="{{ formURL }}?inquiry=true">
      <input id="00N570000063NYi" type="hidden" name="00N570000063NYi" value="{{ formURL }}">
      <!-- input type="hidden" name="debug" value="1">
      <input type="hidden" name="debugEmail" value="your.name@email.com" -->
      <div id="contact"></div>
      <fieldset class="margin-bottom-md padding-bottom-sm border-bottom">
        <div class="margin-bottom-xs">
          <div class="text-component line-height-md">
            <div class="grid gap-xxs items-center@md flex-column">
              <div class="col-4@md text-center@md"><h2>Contact us to get started.</h2></div>
              <div class="col-6@md text-center@md">Submit the form below, and a representative will reach out to you with more information about adding your content to {{ formClient }}.</div>
            </div>
          </div>
        </div>
        <div class="margin-bottom-xs">
          <div class="grid gap-xxs items-center@md">
            <div class="col-4@md text-right@md">
              <label class="form-label" for="first_name">First Name</label>
            </div>
            <div class="col-4@md">
              <input class="form-control width-100%" id="first_name" type="text" name="first_name" data-validate-field="first_name">
            </div>
          </div>
        </div>
        <div class="margin-bottom-xs">
          <div class="grid gap-xxs items-center@md">
            <div class="col-4@md text-right@md">
              <label class="form-label" for="last_name">Last Name</label>
            </div>
            <div class="col-4@md">
              <input class="form-control width-100%" id="last_name" type="text" name="last_name" data-validate-field="last_name">
            </div>
          </div>
        </div>
        <div class="margin-bottom-xs">
          <div class="grid gap-xxs items-center@md">
            <div class="col-4@md text-right@md">
              <label class="form-label" for="company">Company</label>
            </div>
            <div class="col-4@md">
              <input class="form-control width-100%" id="company" type="text" name="company" data-validate-field="company">
            </div>
          </div>
        </div>
        <div class="margin-bottom-xs">
          <div class="grid gap-xxs items-center@md">
            <div class="col-4@md text-right@md">
              <label class="form-label" for="phone">Company Phone</label>
            </div>
            <div class="col-4@md">
              <input class="form-control width-100%" id="phone" type="text" name="phone" data-validate-field="phone">
            </div>
          </div>
        </div>
        <div class="margin-bottom-xs">
          <div class="grid gap-xxs items-center@md">
            <div class="col-4@md text-right@md">
              <label class="form-label" for="email">Work Email</label>
            </div>
            <div class="col-4@md">
              <input class="form-control width-100%" id="email" type="email" name="email" data-validate-field="email">
            </div>
          </div>
        </div>
        <div class="margin-bottom-xs">
          <div class="grid gap-xxs items-center@md">
            <div class="col-4@md text-right@md">
              <label class="form-label" for="region">Region</label>
            </div>
            <div class="col-4@md">
              <div class="select">
                <select id="00N2p000009H8t7" name="00N2p000009H8t7" class="select__input form-control width-100%" id="country" name="country" data-validate-field="country">
                  <option disabled selected value>Please Select</option>
                  <option>-None-</option>
                  <option value="APAC">Asia-Pacific (APAC)</option>
                  <option value="EMEA">Europe, Middle East and Africa (EMEA)</option>
                  <option value="Latin America">Latin America</option>
                  <option value="North America">North America</option>
                </select>
                <svg class="icon select__icon" aria-hidden="true" viewBox="0 0 16 16">
                  <g stroke-width="2" stroke="currentColor">
                    <polyline fill="none" stroke="currentColor" points="15.5,4.5 8,12 0.5,4.5 "></polyline>
                  </g>
                </svg>
              </div>
            </div>
          </div>
        </div>
        <br>
      {% if formPrograms %}
      <div class="grid gap-xxs items-start">
        <div class="col-4@md text-right@md">
          <label class="form-label">Product Interest</label>
        </div>
        <div class="col-4@md">
          <div class="flex flex-column gap-xxxs">
            {% for option in formPrograms %}
              <div>
                  <input id="{{ option.value }}" name="00N2p000009GnpJ" value="{{ option.value }}" class="checkbox" type="checkbox" />
                  <label for="{{ option.value }}"><p>{{ option.name }}</p></label>
              </div>
            {% endfor %}
          </div>
        </div>
      </div>
      {% endif %}
      </fieldset>
        <div class="grid gap-sm flex-center@md flex-column">
          <div class="col">
            <p>CNET Content Solutions will use your personal information to manage the partner program.</p>
          </div>
          <div class="col-4" style="max-width: 305px">
            <label for="g-recaptcha-response" style="display:none">reCAPTCHA</label>
            <div class="g-recaptcha" data-sitekey="6Lc7zy8UAAAAANNrjVoPAH7vvxssVeozhBNt6fN1" required></div><br>
          </div>
          <div class="col-4">
            <button class="btn btn--primary" id="formDetails" alt="Send"> Submit </button>
          </div>
        </div>
        <br>
    </form>
  </div>

  <script src="https://cdn.cnetcontent.com/sites/scripts/just-validate.min.js"></script>
  <script>
    new window.JustValidate('#RetailInquiry', {
      rules: {
        first_name: { required: true },
        last_name: { required: true },
        email: { required: true, email: true },
        phone: { required: true },
        company: { required: true },
        country: { required: true },
      },
      messages: {
        first_name: ' ',
        last_name: ' ',
        email: ' ',
        phone: ' ',
        company: ' ',
        country: ' ',
      },
      submitHandler: function() {
        if ("" == grecaptcha.getResponse()) return event.preventDefault(), alert("Please click the reCAPTCHA checkbox"), !1;
        document.getElementById("RetailInquiry").submit()
      }
    }), /true|success|sent/.test(window.location.href) && (document.getElementById("formAlert").style.display = "block");
  </script>
  <style>
    #formAlert { position: fixed; z-index: 9000; top: 3rem; left: 50%; min-width: 14rem; margin-left: -12rem; padding: .5rem; text-align: center; display: flex; justify-content: space-around; font-weight: 700; line-height: 3rem; color: rgba(0,0,0,.9); border-radius: .25rem; background-color: #ffed42; font-size: 1rem; box-shadow: 2.5px 4px 30px 0 rgba(0,0,0,.5); cursor: pointer; font-size: 1.25rem; }
    .js-validate-error-label { position: absolute; top: calc(45% - 1rem); right: calc(0% + 1rem); height: 3rem; width: 3rem; display: flex; align-items: center; justify-content: center; }
    .js-validate-error-field { border: none !important; box-shadow: 0px 1px 2px hsla(var(--color-contrast-higher-h), var(--color-contrast-higher-s), var(--color-contrast-higher-l), 0.1),inset 0px 0px 0px 2px var(--color-error-dark) }
  </style>
</section>
