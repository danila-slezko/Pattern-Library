<section>
  <div class="container max-width-adaptive-md padding-y-xl">
    <div class="grid gap-lg gap-xxxl@md items-center">
      <div class="{{ blockClassTxt }}">
        <span class="text-component line-height-lg v-space-lg">
          <h2 class="text-xl color-black">{{ blockHeadline }}</h2>
          {{ blockCopy }}
          {% include '@button' with { buttonText: 'Submit', buttonModifier: 'btn--primary' } %}
        </span>
      </div>
      <div class="{{ blockClassImg }}">
        <figure class="media-wrapper media-wrapper--4:3">
          <img src="{{ blockImage1x }}" srcset="{{ blockImage2x }}">
        </figure>
      </div>
    </div>
  </div>
</section>
