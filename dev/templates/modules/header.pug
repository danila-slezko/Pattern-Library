style
  :scss(compress=true)
    #header {
      --header-height: 80px;
      --header-height-md: 72px;
      --color-bg: var(--color-primary-darker);
      --color-contrast-higher: white;
      position: fixed;
      top: 0;
      width: 100%;
      .header__item--divider {
        width: 2px;
        height: 3rem;
        opacity: .5;
        background-color: white;
      }
      .btn {
        background-color: transparent;
        color: var(--color-white);
        box-shadow: inset 0 0 0 2px rgba(255, 255, 255, .5) !important;
        &:hover {
          background-color: var(--color-white);
          color: var(--color-primary);
          box-shadow: inset 0 0 0 2px transparent;
        }
      }
      .header__trigger {
        box-shadow: inset 0 0 0 2px transparent !important;
        padding: var(--space-md) 1em;
        &-icon {
          margin-right: 0;
          width: 1.5em;
        }
        &:hover {
          background: transparent;
        }
      }
      .header__nav--is-visible {
        .header__item--divider {
          display: none;
        }
      }
      .header__nav::before {
        border: none;
      }
      .header__item {
        text-align: center;
        img {
          margin: auto;
        }
      }
    }


append vars
  - var showLogo = header.logo.display
  - var showDiv = header.divider.display
  - var showButton = header.button.display

header#header(class='header js-header anchor')
  .header__container.container.max-width-adaptive-md
    .header__logo #[a(href='#top') #[img(src=header.branding.image, alt=header.branding.alt)]]
    button.btn.btn--subtle.header__trigger.js-header__trigger(aria-label='Toggle menu', aria-expanded='false', aria-controls='header-nav')
      i.header__trigger-icon(aria-hidden='true') #[span.is-hidden Menu]
    nav.header__nav.js-header__nav#header-nav(role='navigation', aria-label='Main')
      .header__nav-inner.margin-auto.max-width-adaptive-md
        .header__label.is-hidden Main menu
        ul.header__list

          //- if header.menu.display
          //-   each item, index in header.menu.list
          //-     li.header__item #[a(href=item.link, class='header__link')=item.label] #[a(href=item.link) #{item.label}]
          //- else

          if showLogo == 0
          else
            li.header__item #[img.block(src=header.logo.image, width=header.logo.width, height=header.logo.height, alt=header.logo.alt)]

          if showDiv == 0
          else
            li.header__item.header__item--divider(aria-hidden='true')

          if showButton == 0
          else
            li.header__item #[a(class='btn btn--subtle js-smooth-scroll', href=header.button.url, data-duration='300') Contact Us]
