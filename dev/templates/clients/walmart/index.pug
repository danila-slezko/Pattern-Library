extend ../../layouts/program

append vars

  include ../../modules/walmart-settings
  include ../../modules/elements

append styles

append scripts

block body

  include ../../modules/header

  main#content

    +block('intro')(class='max-width-adaptive-md')
      include ../../modules/intro

    +block-overlay('service', '../assets/images/group-of-person-sitting-indoors.jpg')(class='max-width-adaptive-lg')
      include ../../modules/card-grid

    +block-overlay('benefit', '../assets/images/background.jpg', 'var(--color-primary-darker)')(class='max-width-adaptive-lg')
      include ../../modules/card-clusters

    +block('create')(class='max-width-adaptive-md')
      include ../../modules/walmart-create

    +block('syndicate')(class='max-width-adaptive-md')
      include ../../modules/walmart-syndicate

    +block('portal')(class='max-width-adaptive-md')
      include ../../modules/block-portal

    section#contact(class='bg bg-contrast-lower padding-y-xl')
      div(class='container max-width-adaptive-sm')
        include ../../modules/contact

    +block('carousel')(class='max-width-adaptive-md')
      include ../../modules/carousel

  include ../../modules/footer
