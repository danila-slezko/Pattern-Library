// main: ../../index.pug

style
  :less(compress=true)
    #bottom {
      background-color: var(--color-contrast-higher);
      color: var(--color-contrast-low);
      .link {
        color: var(--color-contrast-low);
        text-decoration: none;
        &:hover {
          text-decoration: underline;
        }
      }
    }
    
ul(class='flex flex-wrap flex-column flex-row@md gap-0 justify-center items-center')
  each item, index in footer.links
    li
      a(class='link padding-x-xs padding-y-xxs inline-block', href=item.url, target='_blank')=item.label
  
  li(class='opacity-70%') !{footer.copyright}
