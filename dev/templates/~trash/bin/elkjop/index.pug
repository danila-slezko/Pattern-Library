extend ../../layouts/client

append vars
  
  include ../../data/elkjop
  include ../../mixins/elements

block body

  include ../../module/header

  +block('intro')(class='margin-top-lg margin-top-xxl@md max-width-adaptive-md')
    include ../../module/intro

  section#features
    div(class='container max-width-adaptive-md padding-y-xl margin-bottom-sm')
      include ../../partials/_3_feature-panel-inline

  section#reach.bg-primary-dark
    div(class='container max-width-adaptive-md padding-y-xl')
      include ../../partials/_2_block-reach

  section#hotspots
    div(class='container max-width-adaptive-md padding-y-xl')
      include ../../partials/_2_block-hotspots

  section#contact(class='bg-contrast-lower padding-top-md padding-bottom-xl')
    div.container.max-width-adaptive-sm
      include ../../module/contact

  section#carousel(class='bg position-relative z-index-1 padding-y-xl')
    div.container.max-width-adaptive-md
      include ../../module/carousel

  include ../../module/footer

  script(src='../assets/js/scripts.js')
